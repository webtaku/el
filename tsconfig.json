{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "inlineSources": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "lib": [
      "DOM",
      "ESNext",
      "ScriptHost"
    ],
    "declaration": true,
    "declarationDir": "dist/types",
    "declarationMap": true,
    "composite": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "rootDir": "./src",
    "outDir": "dist"
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules",
    "**/dist/**",
    "./tests"
  ],
}